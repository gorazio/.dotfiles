#!/usr/bin/env bash

export STOW_FOLDERS="bash,bin,kairion,linux,personal,tmux,vault"
export DOTFILES=$HOME/.dotfiles

export GOPATH=$HOME/go

export EDITOR="code --wait"

increaseWatchers() {
    sudo sysctl fs.inotify.max_user_watches=65536
    sudo sysctl -p
}

change_background() {
    dconf write /org/mate/desktop/background/picture-filename "'$HOME/dotfiles/backgrounds/$(ls ~/dotfiles/backgrounds | fzf)'"
}

die() {
    echo >&2 "$@"
    exit 1
}

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

commitDotFiles() {
    pushd "$DOTFILES" || exit 1
    pushd personal || exit 1
    git add .
    git commit -m "automagic messaging from me in the past.  Have you checked up your butthole?"
    git push origin master
    popd || exit 1
    git add .
    git commit -m "automagic messaging from me in the past.  Have you checked up your butthole?"
    git push origin master
    popd || exit 1
}

validateYaml() {
    python -c 'import yaml,sys;yaml.safe_load(sys.stdin)' <"$1"
}

unlockBitWarden() {
    # bw locked
    for i in $(seq 5); do
        KEY=$(bw unlock --raw)
        if [[ $? -eq 0 ]]; then
            break
        fi
    done
    sed -i "s|^export BW_SESSION='.*'|export BW_SESSION='$KEY'|" /home/gorazio/.bash_aliases
    export BW_SESSION="$KEY"
}
